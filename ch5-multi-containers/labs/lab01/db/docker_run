# 1. 실행 중인 postgres-db 컨테이너가 있다면 중지 및 삭제
docker stop postgres-db
docker rm postgres-db

# 2. 기존 볼륨 삭제
docker volume rm pg-data

# 3. 새로운 17버전으로 컨테이너 실행 (이제 깨끗한 상태에서 시작)
docker run -d \
--name postgres-db \
--network spring-pg-net \
-e POSTGRES_DB=hello_db \
-e POSTGRES_USER=hellouser \
-e POSTGRES_PASSWORD=hellouser123 \
-v pg-data:/var/lib/postgresql/data \
postgres:17